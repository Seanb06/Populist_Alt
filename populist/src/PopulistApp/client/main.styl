html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
}


body 
	margin 0
	background rgba(215,215,215,0.34)
	font-family: 'Raleway', sans-serif;



a 
	color #0C5BFF

.body-max
	max-width 1320px
	margin 0 auto
	padding-left 15px 
	padding-right 15px

.sec-head
	font-weight 800 
	text-align center
	font-size 32px

.home-card 
	width 300px
	height 300px
	position relative 
	padding 15px
	box-shadow none !important

.card-title 
	padding 5px 0px !important
	font-weight bold
	font-size 12px !important

.card-grid 
	max-width 1320px
	margin 0 auto
	outline 1px dotted green
	> div 
		margin 15px
		/*outline 1px dotted red*/

@media (min-width:675px)
	.card-grid 
		max-width:660px
		margin: 0 auto
@media (min-width:1005px)
	.card-grid 
		max-width:990px
		margin: 0 auto
@media (min-width:1335px)
	.card-grid 
		max-width:1320px
		margin: 0 auto




